{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right"><a href="{{ add }}" data-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary"><i class="fa fa-plus"></i></a>
        <button type="button" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger" onclick="confirm('{{ text_confirm }}') ? $('#form-metal_conversion').submit() : false;"><i class="fa fa-trash-o"></i></button>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
      </div>
      <div class="panel-body">
        {% set cols = 0 %}
		<table class="list" border="1" cellspacing="15" cellpadding="15" style="width:100%;">
		 {% for key, purity in puritys %}
				<tr>
			{% set rows = 0 %}
			{% for key2, purity2 in puritys2 %}
			{% if cols == 0 %}
				<tr style="border-top:1px solid #ccc;">
				<td><b>{{ text_metal }}</b></td>
			{% for purity3 in puritys3 %}
				<td class="left"><b>{{ purity3 }}</b></td>
			{% endfor %}
				</tr>
			{% endif %}
				{% set cols = cols+1 %}
			{% if rows == 0 %}
				<td class="left"><b>{{ purity }}</b></td>
			{% endif %}
				{% set rows = rows+1 %}
				<td class="left">{{ conversions[key][key2] }}</td>
		   {% endfor %}
				</tr>
		  {% endfor %}
		</table>
      </div>
    </div>
  </div>
</div>
{{ footer }}