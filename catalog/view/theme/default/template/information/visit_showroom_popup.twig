<div class="loginpop-wrap modal-popup-main zoom-anim-dialog">
<section class="top">
    <div class="loginpop-tabs">
            <ul class="nav nav-tabs nav-justified">
                <li class="active">Book Appointment</li>
            </ul>
      </div></section>
      <div class="tab-content clearfix">
      <section id="contacter" class="tab-pane active">
         <form action=""  method="post" enctype="multipart/form-data" class="form-horizontal" id ="form-appointment">
              <div class="form-group">
                <div class="col-xs-10">
                <input type="text" id="appointment-firstname" name="firstname" tabindex="1" class="form-control" placeholder="First Name" value=""></div>
              </div>
			  <div class="form-group">
                <div class="col-xs-10">
                <input type="text" id="appointment-lastname" name="lastname" tabindex="2" class="form-control" placeholder="Last Name" value=""></div>
              </div>
              <div class="form-group">                
                <div class="col-xs-10">
                <input type="email" id="appointment-email" name="email" tabindex="3" class="form-control" placeholder="Email Address" value=""></div>
              </div>
			  <div class="form-group">
                <div class="col-xs-10">
                <input type="text" id="appointment-phone" name="phone" tabindex="4" class="form-control" placeholder="Phone" value=""></div>
              </div>
			  <div class="form-group">
                <div class="col-xs-10">
                <input type="text" id="appointment-date" name="appointment_date" tabindex="5" class="datetimepicker form-control" placeholder="Appointment Date & Time" value=""></div>
              </div>
              <div class="form-group">
                <div class="col-xs-10">
                <textarea name="message" id="appointment-message" tabindex="6" rows="3" class="form-control" placeholder="Message"></textarea></div>
              </div>
              <div class="form-group formbtn">
                  <div class="col-xs-10">
                    <input type="button" name="button-appointment" id="button-appointment" tabindex="4" class="btn-black button" value="Send your Message">
                  </div>
              </div>
            </form>
        </section>
      </div>

</div>
<script type="text/javascript">
	$(function () {
		$('.datetimepicker').datetimepicker({
			//sideBySide: true
		});
	});
</script>
<script type="text/javascript"><!--
$('#button-appointment').on('click', function() { 
  $.ajax({
    url: 'index.php?route=information/visit_showroom/confirm',
    type: 'post',
    dataType: 'json',
    data: $("#form-appointment").serialize(),
    beforeSend: function() {
      $('#button-appointment').button('loading');
    },
    complete: function() {
      $('#button-appointment').button('reset');
    },
    success: function(json) {
      $('.alert-success, .alert-danger').remove();

      if (json['error']) {
        $('#contacter').prepend('<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> ' + json['error'] + '</div>');
      }

      if (json['success']) {
        $('#contacter').prepend('<div class="alert alert-success"><i class="fa fa-check-circle"></i> ' + json['success'] + '</div>');
        $('#contact-name').val('');
        $('#contact-email').val('');
        $('#contact-enquiry').val('');
		setTimeout(function(){ $(".close").trigger('click'); }, 3000);
        
		if(json['redirect']){
			location.href= json['redirect'];
			return false;
		}
      }
    }
  });
});

//--></script>