{% if products %}
<section class="bg-gray padding-two">
	<div class="container width-100">
		<div class="row">
			<div class="col-md-12 text-center">
				<h2 class="padding-three no-padding-top">Best Sellers</h2>
			</div>
		</div>
		<div class="row">
			<!-- featured products slider -->
			<div id="shop-products" class="owl-carousel owl-theme dark-pagination owl-no-pagination owl-prev-next-simple">
			 {% for product in products %}
				<!-- shop item -->
				<div class="item">
					<div class="home-product text-center position-relative overflow-hidden">
						<a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" /></a>
						<span class="product-name text-uppercase"><a href="{{ product.href }}">{{ product.name }}</a></span>
						<span class="price black-text">From {{ product.price }}</span>
						<div class="quick-buy">
							<div class="product-share">
								<a href="javascript:void(0);" onclick="wishlist.add('{{ product.product_id }}');" class="highlight-button-dark btn btn-small no-margin-right quick-buy-btn" title="Add to Wishlist"><i class="fa fa-heart-o"></i></a>
								<a href="javascript:void(0);" onclick="compare.add('{{ product.product_id }}');" class="highlight-button-dark btn btn-small no-margin-right quick-buy-btn" title="Add to Compare"><i class="fa fa-refresh"></i></a>
								<a href="javascript:void(0);" onclick="cart.add('{{ product.product_id }}');" class="highlight-button-dark btn btn-small no-margin-right quick-buy-btn" title="Add to Cart"><i class="fa fa-shopping-cart"></i></a>
							</div>
						</div>
					</div>
				</div>
				<!-- end shop item -->
				{% endfor %}
			</div>
			<!-- end featured products slider -->
		</div>
	</div>
</section>
{% endif %}